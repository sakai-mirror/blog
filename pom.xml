<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    
  	<modelVersion>4.0.0</modelVersion>
  
  	<name>BLOG</name>
  	<groupId>org.sakaiproject.blog</groupId>
  	<artifactId>blog</artifactId>
  	<version>2.0-SNAPSHOT</version>
  	<packaging>pom</packaging>

	<parent>
		<groupId>org.sakaiproject.purepoms</groupId>
		<artifactId>sakai-standard-tool</artifactId>
		<version>2.7.0-build05-SNAPSHOT</version>
	</parent>

	<properties>
        <entitybroker-api.version>[1.3.7,1.3.20)</entitybroker-api.version>
        <search-api.version>1.3.0-SNAPSHOT</search-api.version>
	  	<profile-api.version>2.7.0-b01</profile-api.version>
      	<log4j.version>1.2.8</log4j.version>
	  	<servlet-api.version>2.4</servlet-api.version>
    </properties>
  	
  	<organization>
    	<name>Lancaster Centre for e-Science</name>
    	<url>http://e-science.lancs.ac.uk</url>
  	</organization>
  	<inceptionYear>2005</inceptionYear>
  	<developers>
    	<developer>
      		<name>Adrian Fish</name>
      		<email>a.fish@lancaster.ac.uk</email>
    	</developer>
    	<developer>
      		<name>Miguel Gonzalez Losa</name>
    	</developer>
  	</developers>

	<repositories>
        <repository>
            <id>sakai-maven</id>
            <name>Sakai Maven Repo</name>
            <layout>default</layout>
            <url>http://source.sakaiproject.org/maven2</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>sakai-maven2-snapshots</id>
            <name>Sakai Maven Repo</name>
            <layout>default</layout>
            <url>http://source.sakaiproject.org/maven2-snapshots</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>default</id>
            <name>Maven Repository Switchboard</name>
            <layout>default</layout>
            <url>http://repo1.maven.org/maven2</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>
  	
  	<modules>
    	<module>components</module>
    	<module>assembly</module>
    	<module>api</module>
    	<module>impl</module>
    	<module>tool</module>
  	</modules>

 	<pluginRepositories>
        <pluginRepository>
            <id>maven2-central-repo</id>
            <name>Maven2 Central Repo</name>
            <url>http://repo1.maven.org/maven2/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
        <pluginRepository>
            <id>Sakai Plugin Repo</id>
            <url>http://source.sakaiproject.org/maven2</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>
    
    <scm>
    	<connection>scm:svn:https://source.sakaiproject.org/svn/blog/branches/post_2-7</connection>
    	<developerConnection>scm:svn:https://source.sakaiproject.org/svn/blog/branches/post_2-7</developerConnection>
    	<url>https://source.sakaiproject.org/svn/blog/branches/post_2-7</url>
  	</scm>

    <dependencyManagement>
        <dependencies>

            <!-- EntityBroker -->
            <dependency>
                <groupId>org.sakaiproject.entitybroker</groupId>
                <artifactId>entitybroker-api</artifactId>
                <version>${entitybroker-api.version}</version>
            </dependency>

            <dependency>
                <groupId>org.sakaiproject.search</groupId>
                <artifactId>search-api</artifactId>
                <version>${search-api.version}</version>
            </dependency>
            
            <dependency>
      			<groupId>org.sakaiproject.profile</groupId>
      			<artifactId>profile-api</artifactId>
	  			<version>${profile-api.version}</version>
	  			<scope>provided</scope>
    		</dependency>
    		
    		<dependency>
      			<groupId>log4j</groupId>
      			<artifactId>log4j</artifactId>
      			<version>${log4j.version}</version>
	  			<scope>provided</scope>
    		</dependency>
    		
    		<dependency>
      			<groupId>commons-lang</groupId>
      			<artifactId>commons-lang</artifactId>
      			<version>2.4</version>
	  			<scope>provided</scope>
    		</dependency>
    		
    		<dependency>
      			<groupId>javax.servlet</groupId>
      			<artifactId>servlet-api</artifactId>
      			<version>${servlet-api.version}</version>
	  			<scope>provided</scope>
    		</dependency>

        </dependencies>
    </dependencyManagement>

</project>
