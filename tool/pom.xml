  <build>
    <resources>
      <resource>
        <directory>${basedir}/src/java</directory>
        <includes>
          <include>**/*.html</include>
          <include>**/*.js</include>
          <include>**/*.properties</include>
          <include>**/*.gif</include>
          <include>**/*.css</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-sakai-wicket</id>
            <phase>compile</phase>
            <configuration>
              <tasks>
<!--  Copy the webstart requirements into the exploded webapp directory. This needs to happen before the directory is warred -->
                <copy file="${basedir}/../lib/sakai-wicket-M2.jar" todir="${project.build.directory}/${project.build.finalName}/WEB-INF/lib"/>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.0</version>
      </plugin>
    </plugins>
  </build>
</project>
