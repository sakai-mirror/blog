<?xml version="1.0"?>
<web-app id="WebApp_9" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <display-name>blog</display-name>
    
    <description>Blog</description>

<!--sakai-->
    <filter>
        <filter-name>sakai.request</filter-name>
        <filter-class>org.sakaiproject.util.RequestFilter</filter-class>
		<init-param>
			<param-name>http.session</param-name> 
			<param-value>tool</param-value> 
		</init-param>        
    </filter>
    
    <servlet>
        <servlet-name>blogger</servlet-name>
	    <servlet-class>org.apache.wicket.protocol.http.WicketServlet</servlet-class>
	    <init-param>
	      	<param-name>applicationFactoryClassName</param-name>
	      	<param-value>org.apache.wicket.spring.SpringWebApplicationFactory</param-value>
	    </init-param>
	    <init-param>
			<param-name>applicationBean</param-name>
			<param-value>blogApplication</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>        
     </servlet>

      <!-- Wicket likes to have a url-pattern mapping even though Sakai doesn't use it. -->
	<servlet-mapping>
		<servlet-name>blogger</servlet-name>
		<url-pattern>/sakai-blog-tool/*</url-pattern>		
	</servlet-mapping>
	
    <listener>
        <listener-class>org.sakaiproject.util.ToolListener</listener-class>
    </listener>  
    
  	<listener>
    	<listener-class>org.sakaiproject.util.ContextLoaderListener</listener-class>
  	</listener>

	<welcome-file-list>
	  <welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>

		
